<% if current_user %>
  <div class="row content-bg-color">
    <div class="col-md-12 content-bg-color text-center mb-4">
      <%= link_to 'Create a new project linkage', new_website_path, class: "btn btn-sm btn-outline-success" %>
      <%= link_to('log out', destroy_user_session_path, method: :delete, class: "btn btn-sm btn-outline-secondary") %>
      <%= link_to('change password', edit_user_registration_path, class: "btn btn-sm btn-outline-warning") %>
    </div>
  </div>
<% end %>

<div class="row content-bg-color">
  <% @websites.each do |w| %>
    <div class="col-md-4 d-flex mb-4">
      <div class="card p-1">
        <div class="card-display">
          <%= filestack_image w.filepicker_url, transform: filestack_transform.resize(height:300).quality(value:100), class: "card-img-top" %>
         </div>  
          <div class="card-body">
            <h5 class="card-title"><%= w.name %></h5>
            <table width="100%"><tr><td>
              <%= link_to 'Info', website_path(w), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to 'Open', w.web_url, class: "btn btn-outline-success btn-sm ", target: :_blank %>
              <%= link_to image_tag("github.png", size: "30x30"), w.git_url, target: :_blank %>
            </td>

            <td class="text-right">
              <% if current_user %>
                <%= link_to 'Edit', edit_website_path(w), class: "btn btn-sm btn-warning" %>
                <%= link_to 'Delete', w, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr></table>
        </div>
      </div>
    </div>
  <% end %>
</div>